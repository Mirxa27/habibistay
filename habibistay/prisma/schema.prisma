generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User roles
enum UserRole {
  GUEST
  HOST
  PROPERTY_MANAGER
  ADMIN
  INVESTOR
}

// Booking statuses
enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  REJECTED
}

// Payment statuses
enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
  PARTIAL_REFUND
}

// Notification types
enum NotificationType {
  BOOKING_UPDATE
  PAYMENT_UPDATE
  BOOKING_REMINDER
  MESSAGE
  REVIEW
  SYSTEM
}

// User model
model User {
  id                String    @id @default(cuid())
  name              String?
  email             String    @unique
  emailVerified     DateTime?
  image             String?
  password          String?
  role              UserRole  @default(GUEST)
  isActive          Boolean   @default(true)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Profile information
  phone             String?
  bio               String?
  address           String?
  city              String?
  country           String?
  
  // Relations
  accounts          Account[]
  sessions          Session[]
  ownedProperties   Property[]              @relation("PropertyOwner")
  bookings          Booking[]               @relation("GuestBookings")
  reviews           Review[]                @relation("ReviewAuthor")
  receivedReviews   Review[]                @relation("ReviewSubject")
  sentMessages      Message[]               @relation("MessageSender")
  receivedMessages  Message[]               @relation("MessageReceiver")
  managedProperties PropertyManagerAssignment[]
  payoutMethods     PayoutMethod[]
  wishlist          WishlistItem[]
  passwordResetTokens PasswordResetToken[]
  notifications     Notification[]
  
  // For investors
  isInvestor        Boolean   @default(false)
  investorProfile   InvestorProfile?
}

// OAuth accounts
model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

// Sessions
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Property model
model Property {
  id                String    @id @default(cuid())
  title             String
  description       String    @db.Text
  ownerId           String
  type              String    // Apartment, House, Room, etc.
  price             Decimal   @db.Decimal(10, 2)
  cleaningFee       Decimal?  @db.Decimal(10, 2)
  serviceFee        Decimal?  @db.Decimal(10, 2)
  address           String
  city              String
  state             String?
  zipCode           String?
  country           String
  lat               Float?
  lng               Float?
  bedrooms          Int
  beds              Int
  bathrooms         Int
  maxGuests         Int
  amenities         String[]  // Array of amenity IDs or names
  images            Image[]   // Relation to Image model
  houseRules        String?   @db.Text
  cancellationPolicy String?
  isPublished       Boolean   @default(false)
  isFeatured        Boolean   @default(false) // For Sara chatbot featured properties
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations
  owner             User      @relation("PropertyOwner", fields: [ownerId], references: [id])
  bookings          Booking[]
  reviews           Review[]  @relation("PropertyReviews")
  availability      Availability[]
  managers          PropertyManagerAssignment[]
  wishlistItems     WishlistItem[]
  channelConnections ChannelConnection[]
}

// Property images
model Image {
  id          String   @id @default(cuid())
  publicId    String   @unique // Cloudinary public ID
  url         String
  secureUrl   String   @map("secure_url") // HTTPS URL
  width       Int?
  height      Int?
  format      String?  // jpg, png, etc.
  bytes       Int?     // File size in bytes
  propertyId  String
  caption     String?
  isPrimary   Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  // Relations
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@map("property_images")
}

// Property availability
model Availability {
  id          String   @id @default(cuid())
  propertyId  String
  date        DateTime
  isAvailable Boolean  @default(true)
  price       Decimal? @db.Decimal(10, 2) // Special pricing for this date
  
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  @@unique([propertyId, date])
}

// Booking model
model Booking {
  id              String        @id @default(cuid())
  propertyId      String
  guestId         String
  checkInDate     DateTime
  checkOutDate    DateTime
  numberOfGuests  Int
  totalPrice      Decimal       @db.Decimal(10, 2)
  status          BookingStatus @default(PENDING)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  // Relations
  property        Property      @relation(fields: [propertyId], references: [id])
  guest           User          @relation("GuestBookings", fields: [guestId], references: [id])
  payments        Payment[]
  reviews         Review[]
  messages        Message[]
}

// Payment model
model Payment {
  id              String        @id @default(cuid())
  bookingId       String
  amount          Decimal       @db.Decimal(10, 2)
  currency        String        @default("USD")
  provider        String        // MyFatoorah, PayPal, etc.
  transactionId   String?
  status          PaymentStatus @default(PENDING)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  booking         Booking       @relation(fields: [bookingId], references: [id])
}

// Review model
model Review {
  id              String    @id @default(cuid())
  bookingId       String
  propertyId      String
  authorId        String    // The reviewer (guest or host)
  subjectId       String    // The person being reviewed (guest or host)
  rating          Int       // 1-5 stars
  comment         String    @db.Text
  response        String?   @db.Text // Response from the reviewed person
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  booking         Booking   @relation(fields: [bookingId], references: [id])
  property        Property  @relation("PropertyReviews", fields: [propertyId], references: [id])
  author          User      @relation("ReviewAuthor", fields: [authorId], references: [id])
  subject         User      @relation("ReviewSubject", fields: [subjectId], references: [id])
}

// Message model
model Message {
  id              String    @id @default(cuid())
  senderId        String
  receiverId      String
  bookingId       String?
  content         String    @db.Text
  isRead          Boolean   @default(false)
  createdAt       DateTime  @default(now())
  
  sender          User      @relation("MessageSender", fields: [senderId], references: [id])
  receiver        User      @relation("MessageReceiver", fields: [receiverId], references: [id])
  booking         Booking?  @relation(fields: [bookingId], references: [id])
}

// Property Manager Assignment
model PropertyManagerAssignment {
  id              String    @id @default(cuid())
  propertyId      String
  managerId       String
  assignedAt      DateTime  @default(now())
  
  property        Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  manager         User      @relation(fields: [managerId], references: [id], onDelete: Cascade)
  
  @@unique([propertyId, managerId])
}

// Payout Method for Hosts
model PayoutMethod {
  id              String    @id @default(cuid())
  userId          String
  type            String    // Bank account, PayPal, etc.
  accountDetails  Json      // Structured data for the account
  isDefault       Boolean   @default(false)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Wishlist items
model WishlistItem {
  id              String    @id @default(cuid())
  userId          String
  propertyId      String
  createdAt       DateTime  @default(now())
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  property        Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  @@unique([userId, propertyId])
}

// Investor Profile
model InvestorProfile {
  id              String    @id @default(cuid())
  userId          String    @unique
  investmentTotal Decimal   @db.Decimal(10, 2)
  portfolioData   Json?     // Structured data about investments
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Channel Manager Integration
model ChannelConnection {
  id              String    @id @default(cuid())
  propertyId      String
  channelName     String    // Airbnb, Booking.com, etc.
  externalId      String    // ID on the external platform
  syncEnabled     Boolean   @default(true)
  lastSynced      DateTime?
  connectionData  Json?     // API keys, tokens, etc.
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  property        Property  @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  
  @@unique([propertyId, channelName])
}

// Password Reset Token model
model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId]) // Index for faster lookups by userId
}

// Notification model
model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      NotificationType
  title     String
  message   String
  data      String?          // JSON string for additional data
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@index([userId])
  @@index([isRead])
  @@index([type])
}
