# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL="postgresql://username:password@localhost:5432/habibistay?schema=public"

# ===================================
# APPLICATION SETTINGS
# ===================================
NODE_ENV="development" # development | production | test
NEXT_PUBLIC_APP_URL="http://localhost:3000"
PORT=3000

# ===================================
# AUTHENTICATION
# ===================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here-generate-with-openssl-rand-base64-32"
JWT_SECRET="your-jwt-secret-key-here"
SESSION_SECRET="your-session-secret-key-here"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"
TWITTER_CLIENT_ID="your_twitter_client_id"
TWITTER_CLIENT_SECRET="your_twitter_client_secret"

# ===================================
# PAYMENT GATEWAYS
# ===================================
# Stripe (Primary)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# PayPal (Optional)
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_MODE="sandbox" # sandbox | live

# MyFatoorah (For GCC Region)
MYFATOORAH_API_KEY="your_myfatoorah_api_key"
MYFATOORAH_BASE_URL="https://apitest.myfatoorah.com"
MYFATOORAH_MODE="test" # test | live

# ===================================
# CLOUD STORAGE (Cloudinary)
# ===================================
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# ===================================
# AI SERVICES
# ===================================
# OpenAI (Primary - Sara AI Assistant)
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview" # gpt-4-turbo-preview | gpt-3.5-turbo

# Anthropic Claude (Alternative - Optional)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# ===================================
# EMAIL SERVICE
# ===================================
# Option 1: SendGrid
SENDGRID_API_KEY="SG.your_sendgrid_api_key"

# Option 2: Resend
RESEND_API_KEY="re_your_resend_api_key"

# Option 3: AWS SES
AWS_SES_REGION="us-east-1"
AWS_SES_ACCESS_KEY_ID="your_aws_access_key"
AWS_SES_SECRET_ACCESS_KEY="your_aws_secret_key"

# Option 4: SMTP (Generic)
EMAIL_SERVER="smtp://username:password@smtp.example.com:587"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your_email@gmail.com"
SMTP_PASSWORD="your_app_specific_password"

# Email Configuration
EMAIL_FROM="noreply@habibistay.com"
EMAIL_FROM_NAME="HabibiStay"

# ===================================
# MAPS & LOCATION
# ===================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
MAPBOX_ACCESS_TOKEN="your_mapbox_access_token"

# ===================================
# ANALYTICS & MONITORING
# ===================================
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX" # Google Analytics 4
SENTRY_DSN="your_sentry_dsn" # Error tracking
SENTRY_AUTH_TOKEN="your_sentry_auth_token"

# ===================================
# CACHING & SESSIONS
# ===================================
REDIS_URL="redis://localhost:6379"

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_AI_ASSISTANT="true"
ENABLE_VIDEO_UPLOAD="true"
ENABLE_MULTI_LANGUAGE="true"
ENABLE_RTL_SUPPORT="true"
ENABLE_CHANNEL_MANAGER="true"
ENABLE_VOICE_CONTROL="true"

# ===================================
# SECURITY SETTINGS
# ===================================
BCRYPT_ROUNDS="10"
PASSWORD_RESET_TOKEN_EXPIRY="3600000" # 1 hour in milliseconds
SESSION_MAX_AGE="2592000" # 30 days in seconds
WEBHOOK_SECRET="your_webhook_secret_key"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000" # 1 minute

# CORS
ALLOWED_ORIGINS="http://localhost:3000,https://habibistay.com"

# ===================================
# FILE UPLOAD LIMITS
# ===================================
MAX_FILE_SIZE="10485760" # 10MB in bytes
MAX_FILES_PER_PROPERTY="20"
MAX_VIDEO_SIZE="104857600" # 100MB in bytes

# ===================================
# BOOKING CONFIGURATION
# ===================================
MIN_BOOKING_DAYS="1"
MAX_BOOKING_DAYS="365"
BOOKING_ADVANCE_DAYS="730" # How far in advance bookings can be made

# ===================================
# LOCALIZATION
# ===================================
DEFAULT_LANGUAGE="en"
SUPPORTED_LANGUAGES="en,ar"
DEFAULT_CURRENCY="USD"
SUPPORTED_CURRENCIES="USD,SAR,AED,EUR,GBP"
DEFAULT_TIMEZONE="Asia/Riyadh"

# ===================================
# CDN & ASSETS
# ===================================
CDN_URL="https://cdn.habibistay.com"

# ===================================
# ADMIN CONFIGURATION
# ===================================
ADMIN_EMAIL="admin@habibistay.com"
SUPPORT_EMAIL="support@habibistay.com"

# ===================================
# LOGGING
# ===================================
LOG_LEVEL="info" # error | warn | info | debug
LOG_FORMAT="json" # json | pretty

# ===================================
# MAINTENANCE MODE
# ===================================
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="We're currently performing scheduled maintenance. Please check back soon."

# ===================================
# TESTING
# ===================================
TEST_MODE="false"
TEST_PAYMENT_MODE="true" # Use test payment credentials
